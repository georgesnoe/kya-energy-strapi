{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Date": {
      "type": "date",
      "required": true
    },
    "Titre": {
      "type": "string",
      "required": true
    },
    "PhotoCouverture": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "Like": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "Contenu": {
      "type": "richtext"
    }
  }
}
