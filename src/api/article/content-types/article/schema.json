{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "date": {
      "type": "date",
      "required": true
    },
    "titre": {
      "type": "string",
      "required": true
    },
    "photoCouverture": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "like": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "contenu": {
      "type": "richtext",
      "required": true
    }
  }
}
